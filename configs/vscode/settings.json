{
    // âœï¸ Editor
    "editor.fontFamily": "HackGen35 Console NF",
    "editor.fontSize": 20,
    "editor.formatOnSave": true,
    "editor.lineHeight": 32,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    // wordWrap: Lines that exceed the screen width will automatically wrap and be displayed
    "editor.wordWrap": "on",
    // ğŸ“ Files
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.idea": true
    },
    // ğŸ”¨ Git
    "git.openRepositoryInParentFolders": "never",
    "github.copilot.editor.enableAutoCompletions": true,
    // ğŸ’¬ Language
    "problems.decorations.enabled": true,
    // ğŸŒˆ rainbow-brackets
    "rainbowBracket.enableVariableRainbow": true,
    // ğŸš‰ Terminal
    "terminal.integrated.fontFamily": "HackGen35 Console NF",
    "terminal.integrated.fontSize": 20,
    // ğŸ”¨ Vim
    "vim.useSystemClipboard": true,
    // ğŸ¨ Window
    "window.zoomLevel": 2,
    // ğŸ¨ UI, Theme
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none" // Skip the welcome page â©
}
